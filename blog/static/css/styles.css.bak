body {margin: 0;
 padding: 0;
 height: 100%;
 font-family: Tahoma, Geneva, sans-serif;
 line-height: 1.2;}

.top-banner {background-color:  #000000;
 height: 50px;}
		
.top-banner ul {list-style-type: none;
 margin: 0;
 padding: 10px;}

.top-banner li {float: left;}

.top-banner a {color: white;
 padding: 10px;
 font-size: 14px;
 text-decoration: none;
 display: block;}
		
/*Post List*/
            
.main-left ul  {list-style-type: none;}

.main-left a {text-decoration: none;
 color: black;
 display: block;
 padding: 2px;}

/*Post Detail*/

.main  {width: 40%;
margin-left: 10px;}

/*Tags*/

.tags ul {list-style-type: none;
 margin: 0;
 padding: 0;}

.tags li {float: left;}

.tags a {text-decoration: none;
 border: 1px solid black;
 color: black;
 margin: 2px;
 padding: 2px 6px;
 border-radius: 3px;
 cursor: pointer;}

/*Post Create*/

Textarea {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 5px;}

input[type=text] {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 5px;}


 .submitbtn {border: 1px solid #ccc;
  border-radius: 4px;
  background-color: white;
  color: black;
  padding: 12px 30px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 14px;
  margin: 4px 2px;
  cursor: pointer;
  font-weight: bold;}

  